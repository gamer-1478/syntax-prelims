    }

    .form-div h1 {
        font-size: 3.5vw;
        font-weight: 500;
        margin-bottom: 30px;
    }

    .form-div .btn {
        border: none;
        border-radius: 1.5vw;
        background-color: #000;
        height: 2vw;
        width: 8vw;
        color: #eee;
        margin-top: 30px;
    }

    .form-div .email,
    .form-div .password {
        margin-left: 30px;
        width: 15vw;
        margin-top: 1vw;
        line-height: 30px;
        border: none;
        border-radius: 1.5vw;
