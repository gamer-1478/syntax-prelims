<body>
    <div class="login-container">
        <div class="form-div">
            <h1>Login</h1><br><br>
            <p style="margin-bottom: 20px;">Don't have an account? <a href="/register" style="color: red;">Register</a>
            </p>
            <form class="login-form" action="/login" method="POST">
                <div class="col-sm-8"></div>
                <label for="email" class="email-label">Email Address</label>
                <input type="text" id="email" name="email" class="email" placeholder="john@gmail.com"><br>
                <label for="password" class="pw-label">Password </label>
                <input type="password" id="password" placeholder="john1234" name="password" class="password"><br>
                <input type="submit" class="btn" value="Sign In" class="index-submit" id="index-submit">
            </form>
        </div>
        <img src="https://media.istockphoto.com/vectors/music_2-vector-id1199399101?k=20&m=1199399101&s=612x612&w=0&h=LY631hKDk4fSqJA8TnlS3b_IS8KynRatlDiKHuYQFUQ="
            class="img" alt="">
    </div>
</body>
<script>
    var notyf = new Notyf();
    <% if (messages.error) { %>
        let err = "<%= messages.error %>"
        notyf.error(err);
    <% } %>
</script>
